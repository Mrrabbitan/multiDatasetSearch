{
  "permissions": {
    "allow": [
      "Bash(sqlite3:*)",
      "Bash(python:*)",
      "Bash(ls:*)",
      "WebSearch",
      "Bash(dos2unix:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git push)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git diff --cached --quiet || git commit -m 'Auto: 编辑文件' --quiet",
            "async": true
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git diff --cached --quiet || git commit -m 'Auto: 创建/写入文件' --quiet",
            "async": true
          }
        ]
      }
    ]
  }
}
